{
    "name": "nodejs_express_graphql",
    "version": "1.0.0",
    "description": "Simple Nodejs Project With GraphQL Implimentation",
    "main": "server.js",
    "scripts": {
        "build": "npx tsc",
        "start": "node dist/server.js",
        "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/server.js\"",
        "json:server": "json-server --watch src/mocks/data.json",
        "format:write": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint --fix ."
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.1.3",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-graphql": "^0.12.0",
        "graphql": "^15.8.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.14",
        "@types/node": "^18.11.9",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "concurrently": "^7.5.0",
        "eslint": "^8.27.0",
        "eslint-config-prettier": "^8.5.0",
        "json-server": "^0.17.1",
        "nodemon": "^2.0.20",
        "prettier": "^2.7.1",
        "typescript": "^4.8.4"
    }
}
